<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.FormularioDepartamentoController" spacing="10" alignment="CENTER" prefWidth="300">
    <Label text="Formulario Departamento" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Ubicación:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtUbicacion" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Precio de Compra:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPrecioCompra" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Precio Estimado de Venta:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPrecioEstimadoVenta" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Estado de Remodelación:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEstadoRemodelacion" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Rentabilidad Deseada:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtRentabilidadDeseada" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Guardar" onAction="#guardarDepartamento"/>
        <Button text="Cancelar" onAction="#cancelar"/>
    </HBox>
</VBox>